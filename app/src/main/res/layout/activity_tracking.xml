<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activities.TrackingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="5"
            android:paddingBottom="10dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:layout_weight="0.5"
                android:id="@+id/img_back"
                android:layout_marginTop="1dp"
                android:layout_marginStart="5dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="15dp"
                    android:src="@drawable/circle"
                    android:layout_marginTop="20dp"
                    android:layout_height="15dp"
                    app:tint="@color/colorWhite" />

                <View
                    android:layout_width="4dp"
                    android:background="@color/colorWhite"
                    android:id="@+id/vv_pickup_done"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="15dp"
                    android:src="@drawable/circle"
                    android:layout_marginBottom="25dp"
                    android:layout_height="15dp"
                    app:tint="@color/colorWhite" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tv_from"
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:id="@+id/tv_to_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_from"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tv_to"
                    android:layout_below="@+id/tv_to_txt"
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins" />

            </RelativeLayout>

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_bg_corner"
                android:text="@string/navigation_to_destination"
                android:visibility="visible"
                android:id="@+id/btn_navigation"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_medium"/>


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btn_navigation"
                android:layout_marginBottom="50dp"
                android:id="@+id/swiperefreshLayout">

            <com.mindorks.placeholderview.PlaceHolderView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/placeholder_riders"
                android:background="@color/colorWhite"/>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_bg_corner"
                android:text="@string/end_ride"
                android:visibility="visible"
                android:id="@+id/btn_reached"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_medium"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>