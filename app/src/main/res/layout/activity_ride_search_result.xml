<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RideSearchResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="5"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:layout_weight="0.5"
                android:id="@+id/img_back"
                android:layout_marginTop="1dp"
                android:layout_marginStart="5dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="15dp"
                    android:src="@drawable/circle"
                    android:layout_marginTop="20dp"
                    android:tint="@color/colorWhite"
                    android:layout_height="15dp" />

                <View
                    android:layout_width="4dp"
                    android:background="@color/colorWhite"
                    android:id="@+id/vv_pickup_done"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="15dp"
                    android:src="@drawable/circle"
                    android:tint="@color/colorWhite"
                    android:layout_marginBottom="25dp"
                    android:layout_height="15dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tv_from"
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:id="@+id/tv_to_txt"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_from"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tv_to"
                    android:layout_below="@+id/tv_to_txt"
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins" />

            </RelativeLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="30dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="amv"
                android:id="@+id/tv_dt_time"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorDarkGrey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:background="@drawable/white_bg_corner"
                android:text="@string/filter"
                android:visibility="visible"
                android:id="@+id/btn_filter"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_medium"/>

        <com.mindorks.placeholderview.PlaceHolderView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/placeholder_search_ride"
            android:background="@color/colorWhite"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>