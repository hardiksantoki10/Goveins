<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:id="@+id/root"
    android:background="@drawable/white_bg_corner"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_profile"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:id="@+id/tv_name"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/star_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:id="@+id/tv_rating"
                    android:textSize="12dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/img_female"
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/female"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/img_ac"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ac_car"/>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/loading"
            android:textSize="12dp"
            android:textColor="@color/colorBlack"
            android:gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            android:id="@+id/tv_amt"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="@string/available_seats"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="@string/loading"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_available_seats"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_medium"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/quantum_grey300"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="5"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent">




        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="15dp"
                android:src="@drawable/circle"
                android:layout_marginTop="25dp"
                android:layout_height="15dp" />

            <View
                android:layout_width="4dp"
                android:background="@color/colorRideDetail"
                android:id="@+id/vv_pickup_done"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="15dp"
                android:src="@drawable/circle"
                android:layout_marginBottom="30dp"
                android:layout_height="15dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:id="@+id/tv_from"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to"
                android:id="@+id/tv_to_txt"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_from"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:id="@+id/tv_to"
                android:layout_below="@+id/tv_to_txt"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_time"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_time"
            android:layout_alignParentEnd="true"
            android:textSize="14dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_medium"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            android:id="@+id/tv_start_time"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:layout_alignParentEnd="true"
            android:textSize="14dp"
            android:id="@+id/tv_end_time"
            android:layout_gravity="bottom"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_medium"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_return"
        android:visibility="gone"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_return_lbl"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00"
            android:textSize="14dp"
            android:layout_below="@+id/tv_return_lbl"
            android:layout_marginStart="10dp"
            android:id="@+id/tv_start_time_return"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00"
            android:layout_alignParentEnd="true"
            android:textSize="14dp"
            android:layout_below="@+id/tv_return_lbl"
            android:id="@+id/tv_end_time_return"
            android:layout_gravity="bottom"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_medium"/>
    </RelativeLayout>

</LinearLayout>
