<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/otp__et_bg"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14dp"
        android:textStyle="italic"
        android:paddingRight="5dp"
        android:id="@+id/tv_ride_id"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:text="#1234"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/root"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14dp"
            android:id="@+id/tv_time"
            android:layout_marginStart="5dp"
            android:text="11:00"/>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="15dp"
                android:src="@drawable/circle"
                android:layout_marginTop="22dp"
                android:layout_height="15dp" />

            <View
                android:layout_width="4dp"
                android:background="@color/colorRideDetail"
                android:id="@+id/vv_pickup_done"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="15dp"
                android:src="@drawable/circle"
                android:layout_marginBottom="22dp"
                android:layout_height="15dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.4"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spaze i tech park, 48, gurugram"
                android:id="@+id/tv_from"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to"
                android:id="@+id/tv_to_txt"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_from"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spaze i tech park, 48, gurugram"
                android:id="@+id/tv_to"
                android:layout_below="@+id/tv_to_txt"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:id="@+id/tv_amt"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:text="$ 500"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:id="@+id/tv_date"

                android:textColor="@color/quantum_grey700"
                android:textSize="10dp"
                android:text="20 Jul"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/img_female"
                    android:visibility="gone"
                    android:src="@drawable/female"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/img_ac"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ac_car"/>

            </LinearLayout>


        </LinearLayout>





    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDarkGrey"
        android:layout_marginTop="4dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/quantum_grey"
            android:text="Online Payment"
            android:id="@+id/tv_payment_method"
            android:fontFamily="@font/poppins_medium"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/quantum_orange400"
            android:text="2 Request"
            android:visibility="gone"
            android:id="@+id/tv_request"
            android:layout_toRightOf="@id/tv_payment_method"
            android:fontFamily="@font/poppins_medium"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/bpDarker_red"
                android:text="STOP : "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textSize="14dp"
                android:id="@+id/tv_stop"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/bpDarker_red"
                android:text="2"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>