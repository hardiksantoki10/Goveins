<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PastTakenRideDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linear"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:id="@+id/img_back"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/ride_details"
            android:layout_toRightOf="@id/img_back"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            app:fontFamily="@font/poppins" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/view_receipt"
            android:id="@+id/btn_receipt"
            android:textAllCaps="false"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/white_bg_corner"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp"
        android:layout_below="@id/linear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text=""
                    android:id="@+id/tv_dt"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_medium"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:visibility="gone"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/quantum_orange400"
                        android:text="@string/otp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:textSize="14dp"
                        android:id="@+id/tv_otp"
                        android:visibility="gone"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/quantum_orange400"
                        android:text="2345"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:gravity="right"
                        android:text="@string/passenger"
                        android:textColor="@color/colorLightGrey"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_female"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/female"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="@string/only_female"
                        android:textColor="@color/colorPink"
                        android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_ac"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ac_car"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="@string/ac_car"
                        android:visibility="gone"
                        android:textColor="@color/colorGreen"
                        android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="@string/your_seats"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:id="@+id/tv_taken_seats"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_medium"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="5"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:layout_marginStart="10dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12dp"
                        android:id="@+id/tv_start_time"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="12dp"
                        android:id="@+id/tv_end_time"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/poppins_medium"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="15dp"
                        android:src="@drawable/circle"
                        android:layout_marginTop="15dp"
                        android:layout_height="15dp" />

                    <View
                        android:layout_width="4dp"
                        android:background="@color/colorRideDetail"
                        android:id="@+id/vv_pickup_done"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:src="@drawable/circle"
                        android:layout_marginBottom="15dp"
                        android:layout_height="15dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.1"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/tv_from"
                        android:textColor="@color/colorBlack"
                        android:textSize="13dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to"
                        android:id="@+id/tv_to_txt"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_from"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        android:layout_marginStart="50dp"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/tv_to"
                        android:layout_below="@+id/tv_to_txt"
                        android:textColor="@color/colorBlack"
                        android:textSize="13dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text=""
                    android:id="@+id/tv_amt"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text=""
                    android:id="@+id/tv_amount_type"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_medium"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@color/colorLightGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/linear_driver"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/img_profile"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/tv_name"
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins_medium"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/star_grey"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/tv_rating"
                            android:textSize="12dp"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/poppins_medium"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/online_payment"
                            android:visibility="gone"
                            android:id="@+id/tv_payment_method"
                            android:textSize="12dp"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/poppins_medium"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/view_profile"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:textColor="@color/quantum_grey500"
                    android:gravity="end|center_vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="end"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorLightGrey" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/img_vehicle"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_vehicle_name"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/poppins_medium"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text=""
                            android:id="@+id/tv_vehicle_number"
                            android:textColor="@color/quantum_grey500" />

                        <View
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:background="@color/colorLightGrey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text=""
                            android:id="@+id/tv_vehicle_color"
                            android:textColor="@color/quantum_grey500" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_riders"
                android:visibility="gone"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:background="@color/colorLightGrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="@string/other_riders"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/poppins_medium"/>

                <com.mindorks.placeholderview.PlaceHolderView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/placeHolder_riders" />

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/colorLightGrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/cancel_reason"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:id="@+id/tv_label_reason"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text=""
                android:id="@+id/tv_cancel_reason"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorLightGrey"
                android:fontFamily="@font/poppins_medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/colorLightGrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/instructions"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:id="@+id/tv_label_instruction"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text=""
                android:id="@+id/tv_instruction"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorLightGrey"
                android:fontFamily="@font/poppins_medium"/>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="80dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLightGrey"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/rate_driver"
        android:visibility="gone"
        android:id="@+id/btn_rating"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/btn_bg"/>

</RelativeLayout>