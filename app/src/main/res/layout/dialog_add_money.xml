<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="20dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_money_to_wallet"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:id="@+id/text"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins_medium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Money into Wallet"
            android:textColor="@color/dark_gray"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:id="@+id/text_percent"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:background="@color/quantum_grey300" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:id="@+id/spinner_operator"
            android:layout_marginTop="25dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            android:layout_marginEnd="20dp"
            android:background="@color/colorLightGrey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="17dp"
            android:background="@drawable/contactcustomer_bg"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingEnd="15dp"
                android:paddingStart="10dp"
                android:background="@null"
                android:text=""
                android:id="@+id/etAmt"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/enter_amount"
                android:inputType="numberDecimal"
                android:textSize="15dp"
                android:imeOptions="actionNext"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XAF"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:id="@+id/tv_currency"
                android:fontFamily="@font/poppins_medium"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="17dp"
            android:background="@drawable/contactcustomer_bg"
            android:layout_marginTop="15dp"
            android:id="@+id/relative_number"
            android:visibility="gone"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerInParent="true"
                android:lines="1"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:id="@+id/tv_country_code"
                android:fontFamily="@font/poppins_medium"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingEnd="15dp"
                android:paddingStart="10dp"
                android:background="@null"
                android:text=""
                android:layout_toRightOf="@id/tv_country_code"
                android:id="@+id/etMobileNumber"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/enter_phone"
                android:inputType="number"
                android:textSize="15dp"
                android:lines="1"
                android:imeOptions="actionNext"
                android:textColor="@color/gray" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                android:id="@+id/btn_cancel"
                android:textSize="14dp"
                android:visibility="visible"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/otp__et_bg"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/ok"
                android:visibility="visible"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:id="@+id/btn_ok"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/bg_primary_color"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>